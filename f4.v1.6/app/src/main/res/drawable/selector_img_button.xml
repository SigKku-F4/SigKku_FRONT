<?xml version="1.0" encoding="utf-8"?>
<!--버튼의 배경색, 테두리를 설정할 selector 파일-->
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <!--버튼이 체크되었을때-->
    <item android:drawable="@drawable/ic_calender_off" android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFC107"/>
            <stroke android:width="5dp" android:color="#78E07D" />
            <corners android:radius="7dp" />
            <size android:height="70dp" android:width="70dp"
                />
        </shape>
    </item>
    <!--버튼이 해제되었을때-->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="#FFAEAE" />
            <corners android:radius="7dp" />
            <size android:height="60dp" android:width="60dp"/>
        </shape>
    </item>
</selector>