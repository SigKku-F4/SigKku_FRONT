        <View
            android:layout_width="wrap_content"
            android:layout_height="2px"
            android:layout_marginTop="22dp"
            android:background="@color/colorGray" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="24dp"
            android:text="그룹"
            android:gravity="center"
            android:textSize="12dp"
            android:textAlignment="center"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="26dp"
            android:background="@drawable/round_background"
            android:backgroundTint="@color/colorLineGray"
            android:textColor="@color/white">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설정 변경"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="26dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="12dp"
                android:text="그룹명"
                android:textColor="#000000"
                android:textSize="16dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ems="11"
                android:hint="F4모임"
                android:textSize="14dp"
                android:gravity="right"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="40dp"
                android:paddingRight="10dp"
                android:inputType="textPersonName"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:textSize="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="36dp"
                android:backgroundTint="#D5D5D5"
                android:textColor="#000000"
                android:text="변경"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="그룹소개"
                android:textColor="#000000"
                android:textSize="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="36dp"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ems="11"
                android:hint="다이어트는 내일부터!"
                android:textSize="14dp"
                android:gravity="right"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="26dp"
                android:paddingRight="10dp"
                android:inputType="textPersonName"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:textSize="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="36dp"
                android:backgroundTint="#D5D5D5"
                android:textColor="#000000"
                android:text="변경"/>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2px"
            android:layout_marginTop="22dp"
            android:background="@color/colorGray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그룹 초대"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="26dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="그룹명"
                android:textColor="#000000"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="36dp"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ems="11"
                android:hint="jfsldkfke-asdjendfsk-sdfnenfwkfedm"
                android:textSize="14dp"
                android:gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:paddingRight="10dp"
                android:inputType="textPersonName"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="36dp"
                android:backgroundTint="#D5D5D5"
                android:textColor="#000000"
                android:text="복사"/>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2px"
            android:layout_marginTop="22dp"
            android:background="@color/colorGray" />

        <TextView
            android:id="@+id/btn_group_kick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그룹원 강퇴"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="26dp"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2px"
            android:layout_marginTop="22dp"
            android:background="@color/colorGray" />

        <TextView
            android:id="@+id/btn_group_disband"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그룹 해체"
            android:textColor="#939393"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="26dp"
            />

    </LinearLayout>

</LinearLayout>