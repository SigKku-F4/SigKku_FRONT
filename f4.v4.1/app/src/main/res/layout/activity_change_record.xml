<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.ChangeRecordActivity">

    <!--    상단바     -->
    <ImageView
        android:id="@+id/back_record"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_back"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기록 보기"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="-24dp"
        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorGray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--    식사 시간     -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="| 식사 시간"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="26dp"
            />

        <RadioGroup
            android:id="@+id/radioGroupC"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:orientation="horizontal">

            <RadioButton
                android:checked="true"
                android:id="@+id/btn_breakfastC"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_radio_button"
                android:textColor="@drawable/selector_radio_text"
                android:button="@null"
                android:textAlignment="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="아침" />

            <RadioButton
                android:id="@+id/btn_lunchC"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_radio_button"
                android:textColor="@drawable/selector_radio_text"
                android:layout_marginLeft="16dp"
                android:button="@null"
                android:textAlignment="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="점심" />

            <RadioButton
                android:id="@+id/btn_dinnerC"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_radio_button"
                android:textColor="@drawable/selector_radio_text"
                android:layout_marginLeft="16dp"
                android:button="@null"
                android:textAlignment="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="저녁" />

            <RadioButton
                android:id="@+id/btn_snackC"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_radio_button"
                android:textColor="@drawable/selector_radio_text"
                android:layout_marginLeft="16dp"
                android:button="@null"
                android:textAlignment="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="간식" />
        </RadioGroup>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2px"
            android:layout_marginTop="14dp"
            android:background="#D6D6D6" />

        <!--    음식 사진     -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="| 음식 사진"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="26dp"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!--            <ImageView-->
            <!--                android:id="@+id/btn_camera"-->
            <!--                android:layout_width="30dp"-->
            <!--                android:layout_height="30dp"-->
            <!--                android:layout_marginLeft="4dp"-->
            <!--                android:layout_marginTop="20dp"-->
            <!--                android:src="@drawable/ic_camera" />-->

            <!--            <ImageView-->
            <!--                android:id="@+id/btn_gallery"-->
            <!--                android:layout_width="30dp"-->
            <!--                android:layout_height="30dp"-->
            <!--                android:layout_marginTop="20dp"-->
            <!--                android:layout_marginRight="36dp"-->
            <!--                android:src="@drawable/ic_gallery" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_food1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@color/colorLightGray"
                android:scaleType="centerCrop"/>
            <ImageView
                android:id="@+id/img_food2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="@color/colorLightGray"
                android:scaleType="centerCrop"/>
            <ImageView
                android:id="@+id/img_food3"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="@color/colorLightGray"
                android:scaleType="centerCrop"/>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2px"
            android:layout_marginTop="14dp"
            android:background="#D6D6D6" />


        <!--    음식 추가     -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="| 음식 추가"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="26dp"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/btn_add_food"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="22dp"
                android:layout_marginRight="36dp"
                android:src="@drawable/btn_add"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/addFoodlist"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            tools:listitem="@layout/item_record"></androidx.recyclerview.widget.RecyclerView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2px"
            android:layout_marginTop="14dp"
            android:background="#D6D6D6" />

        <!--    메모     -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="| 메모"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="26dp"
            />

        <EditText
            android:id="@+id/memo"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:background="@drawable/round_background"
            android:hint="내용을 입력하세요"
            android:textSize="16dp"
            android:gravity="top"
            android:padding="14dp"
            android:inputType="textImeMultiLine"
            android:scrollHorizontally="true"/>

        <Button
            android:id="@+id/btn_change"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="26dp"
            android:backgroundTint="#EFEFEF"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_gravity="right"
            android:text="수정" />

    </LinearLayout>



</LinearLayout>