<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.GroupSetting_M">

    <ImageView
        android:id="@+id/back_groupsetting"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_back"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="그룹 설정"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="-24dp"
        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorGray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="50dp"
            android:layout_height="24dp"
            android:text="개인"
            android:gravity="center"
            android:textSize="12dp"
            android:textAlignment="center"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="26dp"
            android:background="@drawable/round_background"
            android:backgroundTint="@color/colorLineGray"
            android:textColor="@color/white">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필 변경"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="26dp"
            />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:checked="true"
                android:id="@+id/btn_profile1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/selector_profile1"
                android:button="@null"
                android:textAlignment="center"/>

            <RadioButton
                android:id="@+id/btn_profile2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/selector_profile2"
                android:layout_marginLeft="18dp"
                android:button="@null"
                android:textAlignment="center"/>

            <RadioButton
                android:id="@+id/btn_profile3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/selector_profile3"
                android:layout_marginLeft="18dp"
                android:button="@null"
                android:textAlignment="center"/>

            <RadioButton
                android:id="@+id/btn_profile4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/selector_profile4"
                android:layout_marginLeft="18dp"
                android:button="@null"
                android:textAlignment="center"/>
        </RadioGroup>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2px"
            android:layout_marginTop="12dp"
            android:background="@color/colorLightGray" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="24dp"
            android:text="그룹"
            android:gravity="center"
            android:textSize="12dp"
            android:textAlignment="center"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="26dp"
            android:background="@drawable/round_background"
            android:backgroundTint="@color/colorLineGray"
            android:textColor="@color/white">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설정 변경"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="26dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="12dp"
                android:text="그룹명"
                android:textColor="#000000"
                android:textSize="16dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/edit_group_name"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ems="11"
                android:text="F4모임"
                android:textSize="14dp"
                android:gravity="right"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="36dp"
                android:paddingRight="10dp"
                android:inputType="textPersonName"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="그룹소개"
                android:textColor="#000000"
                android:textSize="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="36dp"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/edit_group_intro"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ems="11"
                android:text="다이어트는 내일부터!"
                android:textSize="14dp"
                android:gravity="right"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="36dp"
                android:paddingRight="10dp"
                android:inputType="textPersonName"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_group_setting_save"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="@color/colorButtonGray"
            android:textColor="#000000"
            android:text="저장"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2px"
            android:layout_marginTop="22dp"
            android:background="@color/colorGray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그룹 초대"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="26dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="그룹코드"
                android:textColor="#000000"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="36dp"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/copy_group_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="11"
                    android:hint="jfsldkfke-asdjendfsk-sdfnenfwkfedm"
                    android:textSize="14dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="40dp"
                    android:paddingRight="10dp"
                    android:inputType="textPersonName"/>

                <View
                    android:layout_width="180dp"
                    android:layout_height="1dp"
                    android:background="@color/colorGray" />



            </LinearLayout>
            <Button
                android:id="@+id/btn_copy"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="36dp"
                android:backgroundTint="@color/colorButtonGray"
                android:textColor="#000000"
                android:text="복사"/>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2px"
            android:layout_marginTop="22dp"
            android:background="@color/colorGray" />

        <TextView
            android:id="@+id/btn_group_kick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그룹원 강퇴"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="26dp"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2px"
            android:layout_marginTop="22dp"
            android:background="@color/colorGray" />

        <TextView
            android:id="@+id/btn_group_disband"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그룹 해체"
            android:textColor="#939393"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="26dp"
            />

    </LinearLayout>

</LinearLayout>