<?xml version="1.0" encoding="utf-8"?>
<resources>

<!-- Base application theme. -->
<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorLightGray</item>
    <item name="colorPrimaryDark">@color/colorLine</item>
    <item name="colorAccent">@color/colorDarkGray</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
</style>

<style name="defaultButton" parent="Widget.AppCompat.Button.Colored">
    <item name="android:colorAccent">@color/colorDarkGray</item>
</style>

<style name="urgentButton" parent="Widget.AppCompat.Button.Colored">
    <item name="android:colorPrimaryDark">@color/colorLine</item>
</style>
</resources>